<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/things_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_title"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="@color/title_background_color"
                android:gravity="start|center"
                android:paddingLeft="15sp"
                android:text="@string/s1"
                android:textSize="25sp"
                tools:layout_editor_absoluteY="60dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_marginBottom="10sp"
                android:padding="15sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_baseline_person_pin_24"
                    app:tint="@color/settings_page_icon_color"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="130dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/s2"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        tools:layout_editor_absoluteX="95dp"
                        tools:layout_editor_absoluteY="122dp" />
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0sp"
                        android:text="@string/s3"
                        android:textColor="@color/grey_600"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="92dp"
                        tools:layout_editor_absoluteY="161dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_marginBottom="15sp"
                android:layout_height="50sp"
                android:background="@color/title_background_color"
                android:gravity="start|center"
                android:paddingLeft="15sp"
                android:text="@string/s4"
                android:textSize="23sp"
                tools:layout_editor_absoluteY="199dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:padding="15sp"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    >
                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_baseline_person_24"
                        app:tint="@color/settings_page_icon_color"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="260dp" />
                    <TextView
                        android:id="@+id/editTextTextMultiLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:gravity="left"
                        android:text="@string/s5"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="97dp"
                        tools:layout_editor_absoluteY="260dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:padding="15sp"
                    android:orientation="horizontal"
                    android:gravity="start|center">
                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/clients_icon"
                        app:tint="@color/settings_page_icon_color"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="330dp" />
                    <TextView
                        android:id="@+id/editTextTextMultiLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:gravity="left"
                        android:text="@string/s6"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="93dp"
                        tools:layout_editor_absoluteY="327dp" />
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:padding="15sp"
                    android:orientation="horizontal"
                    android:gravity="start|center">
                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        app:tint="@color/settings_page_icon_color"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="404dp" />
                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:text="@string/s7"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="95dp"
                        tools:layout_editor_absoluteY="402dp" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_marginBottom="15sp"
                android:layout_height="50sp"
                android:background="@color/title_background_color"
                android:gravity="start|center"
                android:paddingLeft="15sp"
                android:text="@string/s8"
                android:textSize="25sp"
                tools:layout_editor_absoluteY="447dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:padding="15sp"
                android:orientation="horizontal"
                android:gravity="start|center">
                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/voice_icon"
                    app:tint="@color/settings_page_icon_color"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="512dp" />
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:text="@string/s9"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="511dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_marginBottom="10sp"
                android:layout_height="50sp"
                android:background="@color/title_background_color"
                android:gravity="start|center"
                android:paddingLeft="15sp"
                android:text="@string/s10"
                android:textSize="25sp"
                tools:layout_editor_absoluteY="548dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:padding="15sp"
                android:orientation="horizontal"
                android:gravity="start|center">
                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_baseline_settings_24"
                    app:tint="@color/settings_icon_color"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="617dp" />
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:text="@string/s11"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="98dp"
                    tools:layout_editor_absoluteY="616dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>