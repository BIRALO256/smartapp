<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".Things">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="60sp"
        android:background="@color/yellow"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10sp"
            android:text="@string/app_title"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingRight="10sp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="10sp"
                android:clickable="true"
                android:contentDescription="searching things"
                android:src="@drawable/ysearchicons"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:clickable="true"
                android:contentDescription="Things menu"
                android:src="@drawable/menuoutline"
                app:tint="@color/white" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30sp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/things_icon"
                app:tint="@color/general_icon_color"
                 />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:gravity="center"
                android:text="@string/t1"
                android:textColor="@color/general_icon_color"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:gravity="center"
                android:lineHeight="50sp"
                android:text="@string/t2"
                android:textColor="@color/r_text_color"
                android:textSize="20sp"
                />

            <View
                android:id="@+id/divider3"
                android:layout_marginHorizontal="25sp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30sp"
                android:paddingVertical="15sp"
                android:orientation="horizontal"
                android:gravity="start|center"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/myDiscoverySearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:maxImageSize="30sp"
                    app:fabSize="mini"
                    android:backgroundTint="@color/colored_icon_color"
                    android:contentDescription="Search"
                    android:src="@drawable/ysearchicons"
                    app:tint="@color/white"
                     />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="249dp"
                    android:layout_height="56dp"
                    android:padding="10dp"
                    android:text="@string/t3"
                    android:textColor="@color/t_text_color"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15sp"
                android:paddingLeft="30sp"
                android:gravity="start|center"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/myAdditionOfCloudAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:maxImageSize="30sp"
                    app:fabSize="mini"
                    android:backgroundTint="@color/colored_icon_color"
                    android:contentDescription="@string/r14"
                    android:src="@drawable/add_sign"
                    app:tint="@color/white"
                    />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="249dp"
                    android:layout_height="56dp"
                    android:padding="10dp"
                    android:text="@string/t4"
                    android:textColor="@color/t_text_color"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30sp"
                android:paddingVertical="15sp"
                android:gravity="start|center"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/mySupportDevices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:maxImageSize="30sp"
                    app:fabSize="mini"
                    android:backgroundTint="@color/colored_icon_color"
                    android:contentDescription="@string/t5"
                    android:src="@drawable/boxesicon"
                    app:tint="@color/white"
                    />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="316dp"
                    android:layout_height="54dp"
                    android:padding="10dp"
                    android:text="@string/t5"
                    android:textColor="@color/t_text_color"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30sp"
                android:paddingVertical="15sp"
                android:gravity="start|center"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/myContactSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:maxImageSize="20sp"
                    app:fabSize="mini"
                    android:backgroundTint="@color/colored_icon_color"
                    android:contentDescription="Search"
                    android:src="@drawable/email_box_icon"
                    app:tint="@color/white"
                    />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="249dp"
                    android:layout_height="56dp"
                    android:padding="10dp"
                    android:text="@string/t6"
                    android:textColor="@color/t_text_color"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


















</androidx.constraintlayout.widget.ConstraintLayout>